        <div className="grid gap-4 sm:grid-cols-2 lg:grid-cols-3">
          {items.map((item) => (
            <VocabularyCard
              key={item.id}
              id={item.id}
              wordZh={item.word_zh}
              wordPinyin={item.word_pinyin}
              wordEn={item.word_en}
              exampleSentence={item.example_sentence || undefined}
